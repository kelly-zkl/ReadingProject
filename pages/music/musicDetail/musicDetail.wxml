<view class='page'>
  <view class='page__bd' style='padding-bottom:200rpx'>
    <view class="weui-media-box weui-media-box_appmsg" style='background: linear-gradient(#00d2ff , #00eaff)'>
      <view class="weui-media-box__hd weui-media-box__hd_in-appmsg b" style='margin-right:15px'>
        <image class="weui-media-box__thumb b" style='border-radius:8px'
        src="../../../images/icon_music.png"/>
      </view>
      <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
        <view class="weui-media-box__title txt-15 txt-color-white">专辑名称</view>
        <view class="weui-media-box__desc txt-13 txt-color-white">专辑介绍专辑介绍专辑介绍专辑介绍专辑介绍专辑介绍……专辑介绍专辑介绍专辑介绍专辑介绍专辑介绍专辑介绍……</view>
      </view>
      <view class='weui-cell__ft collection'>
        <image src="../../../images/icon_setting.png" class="cell-icon-size"/>
        <image src="../../../images/icon_setting.png" class="cell-icon-size"/>
      </view>
    </view>
    <view class='weui-flex' style='padding:20rpx 30rpx;background:#fff'>
      <view style='height:50rpx;line-height:50rpx;font-size:14px;text-align:center'>共88首</view>
      <view class='weui-flex__item'></view>
      <view class='btn-small-50' style='margin-right:30rpx'>全加歌单</view>
      <view class='btn-small-50'>推送全部</view>
    </view>
    <!--曲目列表  -->
    <view style='margin-top:20rpx;background:#fff'>
      <view class="weui-media-box weui-media-box_appmsg" style='padding:20rpx 30rpx;border-bottom:1rpx solid #f2f2f2'
        wx:for="0123456" wx:key="*this">
        <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
          <image class="weui-media-box__thumb" style='border-radius:30px'
          src="../../../images/icon_music.png"/>
        </view>
        <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
          <view class="weui-media-box__title txt-15">曲目名称</view>
          <view class="weui-media-box__desc txt-13 txt-color-gray">2.3m  专辑名称</view>
        </view>
        <view class='weui-cell__ft'>
          <image src="../../../images/icon_home_selected.png" class="cell-icon-size s"/>
          <image src="../../../images/icon_home_selected.png" class="cell-icon-size s"/>
        </view>
      </view>
    </view>
    <!--播放进度及按钮  -->
    <view class="weui-footer weui-footer_fixed-bottom" style="background:#fff;padding-top:20rpx;border-top:1rpx #f2f2f2 solid">
      <slider step="5" activeColor="#00d2ff" block-size="12" style='margin:0' block-color="#00d2ff" backgroundColor='#ccc'/>
      <view style='padding:20rpx 30rpx;background: linear-gradient(to right, #00d2ff , #00eaff)' class='weui-flex'>
        <image src="../../../images/icon_setting.png" class="cell-icon-size s" style='margin:6px 30rpx 6px 0'/>
        <image src="../../../images/icon_music.png" style='border-radius:20px;height:40px;width:40px'/>
        <view class='weui-flex__item' style='margin-left:30rpx'>
          <view class='weui-grid__label txt-14 txt-color-white' style='margin-top:0;text-align:left;line-height:40px'>名称</view>
        </view>
        <image src="../../../images/icon_setting.png" class="cell-icon-size s" style='margin:6px 0'/>
      </view>
    </view>
  </view>
</view>