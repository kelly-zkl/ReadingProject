
page{
  background: #fff
}

.b.weui-flex__item{
  -webkit-box-flex:none;
  -webkit-flex:none;
  flex:none;
}
.b.weui-flex__item:nth-child(3n+1){
  margin-left: 5px
}
.b.weui-flex__item:nth-child(3n+2){
  margin: 0
}
.b.weui-flex__item:nth-child(3n){
  margin-right: 5px
}
.weui-grid__icon{
  border-radius: 10rpx;
}
.weui-grid__label.left{
  text-align: left;
  margin-left: 20rpx;
  white-space: pre-wrap
}
.weui-grid__label.txt-13{
  margin-top: 0;
  margin-bottom: 5px
}

/**标签标题*/
.view-tag{
  position: relative;
  padding: 0 30rpx 0 30rpx;
}
.view-tag-title{
  display: inline-block;
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  color: #fff;
  font-size: 12px;
  background: #00d2ff;
  border-radius: 25rpx;
  text-align: center;
}
.view-tag-more{
  display: inline-block;
  position: absolute;
  right: 30rpx;
  color: #999;
  font-size: 13px;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center
}

/*统计  */
.view-card{
  display: inline-block;
  width: 30%;
  padding:20rpx 30rpx;
  background: linear-gradient(to right, #FFb48e , #FFe149);
  margin-right: 20rpx;
  border-radius: 8px;
}
.view-2{
  background: linear-gradient(to right, #72a1fa , #59d4f8);
}
.view-3{
  background: linear-gradient(to right, #43d97f , #a6ec79);
}
.view-card:first-child{
  margin-left: 20rpx
}
.view-card .weui-grid__label{
  color: #fff;
}

/* 去绘本城按钮 */
.weui-grid__label.book{
  width: auto;
  height:60rpx;
  line-height:60rpx;
  border-radius:30rpx;
  border:1px #00d2ff solid;
  padding: 0 30rpx;
  margin: 15rpx auto;
  color: #00d2ff;
  text-align: center
}