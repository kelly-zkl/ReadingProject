@import '../../../template/area/area.wxss';

page{
  background: linear-gradient(#00d2ff , #00eaff) no-repeat fixed;
}
/**白色圆角外边框*/
.bg-white-corner{
  background: #fff;
  border-radius: 10px;
  box-shadow:3px 3px 6px rgba(0,0,0,.1);
  margin:140rpx 40rpx 40rpx 40rpx;
  padding:100rpx 30rpx 30rpx 30rpx;
}

/**宝宝头像*/
.baby-img{
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  border: 4rpx #00d2ff solid;
  border-radius: 50%;
  left: 50%;
  margin-left: -104rpx;
  margin-top: -204rpx;
}
/**保存按钮*/
.btn-save{
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  color: #fff;
  font-size: 16px;
  text-align: center;
  width: 100%;
  background: linear-gradient(to right, #00d2ff , #00eaff);
  margin: 50rpx 0 20rpx 0;
}
/**男宝女宝的选择控件*/
.baby-girl{
  width: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
  border: 1rpx #FF6B8D solid;
  border-radius: 30rpx;
  padding: 0 30rpx;
  text-align: center;
  margin-right: 20rpx;
  color: #FF6B8D;
  font-size: 14px
}
.baby-girl.active{
  background: #FF6B8D;
  color: #fff;
}
.baby-boy{
  width: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
  border: 1rpx #00d2ff solid;
  border-radius: 30rpx;
  margin-left: 20rpx;
  text-align: center;
  padding: 0 30rpx;
  color: #00d2ff;
  font-size: 14px
}
.baby-boy.active{
  background: #00d2ff;
  color: #fff;
}

/**输入框外形*/
.weui-cell{
  height:40px;
  min-height:40px;
  line-height:40px;
  border: 1rpx #00d2ff solid;
  border-radius: 20px;
  margin-bottom: 20rpx;
}
.weui-cell_input{
  height:40px;
  min-height:40px;
  line-height:40px
}
.weui-cell:before{
  display: none
}
.weui-label{
  width: 50px;
  padding-left: 30rpx;
  color: #00d2ff
}