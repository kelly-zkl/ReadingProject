
page{
  background: #fff
}
.weui-navbar__slider{
  width:4em
}

.weui-flex{
  display:-webkit-box;
  display:-webkit-flex;
  display:flex;
  flex-wrap:wrap;
  flex-direction:row;
}
.b.weui-flex__item{
  border-radius: 10px;
  background: #fff;
  box-shadow:3px 3px 6px rgba(0,0,0,.1);
  -webkit-box-flex:none;
  -webkit-flex:none;
  flex:none;
}
.weui-grid__label{
  text-align: left;
  margin-left: 20rpx;
  white-space: pre-wrap
}
.weui-grid__label.txt-13{
  margin-top: 0;
  margin-bottom: 5px
}
.b.weui-flex__item:nth-child(odd){
  margin: 8px 8px 8px 16px
}
.b.weui-flex__item:nth-child(even){
  margin: 8px 16px 8px 8px
}