<view class='page'>
  <view class='page__bd'>
    <view class="weui-tab">
      <view class="weui-navbar">
        <block wx:for="{{tabs}}" wx:key="*this">
          <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}"
            bindtap="tabClick">
            <view class="weui-navbar__title">{{item}}</view>
          </view>
        </block>
        <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
      </view>
      <view class="weui-tab__panel">
        <view class="weui-tab__content" style='padding:30rpx'>
          <block wx:for="012" wx:key="*this">
            <view class='weui-flex' style='margin-bottom:20rpx'>
              <view class='weui-flex__item' style='margin-right:10rpx'>
                <image class='weui-grid__icon' src="../../../images/icon_music.png" mode="widthFix" style='width:100%'></image>
                <view class='weui-grid__label'>专辑名称</view>
                <view class='weui-grid__label txt-color-gray txt-13'>专辑介绍</view>
              </view>
              <view class='weui-flex__item' style='margin-left:10rpx'>
                <image class='weui-grid__icon' src="../../../images/icon_music.png" mode="widthFix" style='width:100%'></image>
                <view class='weui-grid__label'>专辑名称</view>
                <view class='weui-grid__label txt-color-gray txt-13'>专辑介绍</view>
              </view>
            </view>
          </block>
        </view>
      </view>
    </view>
  </view>
</view>