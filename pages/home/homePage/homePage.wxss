page{
  background: linear-gradient(#00d2ff , #00eaff) no-repeat fixed;
}

.btn-bind-dev{
  height: 66rpx;
  width: 100%;
  line-height: 66rpx;
  border-radius: 35rpx;
  border: 4rpx #fff solid;
  color: #fff;
  font-size: 16px;
  text-align: center;
}

/**绑定图片大小为100px*/
.weui-media-box__thumb.bind{
  width: 150px;
  height: 150px;
  vertical-align:center;
}
.weui-media-box__hd_in-appmsg.bind{
  width: 150px;
  height: 150px;
  line-height: 150px;
  margin-right:40px;
}
/**未绑定图片大小为100px*/
.weui-media-box__thumb.unbind{
  width: 200px;
  height: 200px;
  vertical-align:center;
}
.weui-media-box__hd_in-appmsg.unbind{
  width: 200px;
  height: 200px;
  line-height: 200px;
  margin-right:40px;
}

.weui-cell,.weui-cells{
  border-radius: 10px 10px 0 0;
}

.bg-white-corner{
  background: #fff;
  border-radius: 10px;
}
.view-star{
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}