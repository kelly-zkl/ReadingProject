page{
  background: linear-gradient(#00d2ff , #00eaff) no-repeat fixed;
}

.btn-bind-dev{
  height: 32px;
  line-height: 32px;
  border-radius: 18px;
  border: 2px #fff solid;
  color: #fff;
  font-size: 16px;
  text-align: center
}

/**绑定图片大小为100px*/
.weui-media-box__thumb.bind{
  width: 100px;
  height: 100px;
  vertical-align:center;
  margin-left: 20rpx
}
.weui-media-box__hd_in-appmsg.bind{
  width: 100px;
  height: 100px;
  line-height: 100px;
  margin-right: 60rpx;
}
.weui-media-box__hd_in-appmsg.bind,.weui-media-box__bd_in-appmsg.bind{
  margin-top: 80rpx
}

.weui-cell,.weui-cells{
  border-radius: 10px 10px 0 0;
}

.bg-white-corner{
  background: #fff;
  border-radius: 10px;
}
.view-star{
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}

.setting{
  position: absolute;
  top:15px;
  right:5px;
  display: flex;
  align-items: center
}

.weui-grid__label.txt-14{
  text-align:left;
  margin-left:6px;
  margin-top:0;
  white-space: pre-wrap
}