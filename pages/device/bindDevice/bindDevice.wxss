page{
  background: linear-gradient(#00d2ff , #00eaff) no-repeat fixed;
}

/**白色圆角外边框*/
.bg-white-corner{
  background: #fff;
  border-radius: 10px;
  box-shadow:3px 3px 6px rgba(0,0,0,.1);
  margin:40rpx;
  padding:30rpx;
}

/**输入框外形*/
.weui-cell.corner{
  height:40px;
  min-height:40px;
  line-height:40px;
  border: 1rpx #00d2ff solid;
  border-radius: 20px;
  margin-bottom: 20rpx;
}
.weui-cell_input.corner{
  height:40px;
  min-height:40px;
  line-height:40px
}
.corner.weui-cell:before{
  display: none
}
.weui-label.corner{
  width: 50px;
  padding-left: 30rpx;
  color: #00d2ff
}

/**说明文字*/
.view-msg{
  padding: 0 40rpx 40rpx 40rpx;
  display:block;
  white-space:pre-line;
  color: #fff;
  font-size: 14px;
}

/*wifi信息二维码  */
.update-title{
  border-radius: 8px 8px 0 0;
  background: #00d2ff;
  padding: 30rpx
}
.update-title .weui-grid__label{
  margin-top: 0;
  color: #fff;
  text-align: left;
  white-space: pre-wrap;
}

.weui-cell__ft_in-access:after{right: 20px}