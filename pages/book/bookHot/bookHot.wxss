
page{
  background: #fff
}

.weui-navbar__slider{
  width:64px
}
.weui-navbar__title{
  color: #999;
  font-size: 13px
}

.weui-grid__icon.tab{
  width: 120rpx;
  height: 120rpx
}
.weui-grid__label.left{
  text-align: left;
  margin-left: 20rpx;
  white-space: pre-wrap
}
.weui-grid__label.txt-13{
  margin-top: 0
}
.b.weui-flex__item{
  -webkit-box-flex:none;
  -webkit-flex:none;
  flex:none;
}
.b.weui-flex__item:nth-child(3n+1){
  margin-left: 5px
}
.b.weui-flex__item:nth-child(3n+2){
  margin: 0
}
.b.weui-flex__item:nth-child(3n){
  margin-right: 5px
}

/**标签标题*/
.view-tag{
  position: relative;
  padding: 0 30rpx 0 0;
}
.view-tag-title{
  display: inline-block;
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  color: #fff;
  font-size: 12px;
  background: #00d2ff;
  border-radius: 0 25rpx 25rpx 0;
  text-align: center;
}
.view-tag-more{
  display: inline-block;
  position: absolute;
  right: 30rpx;
  color: #999;
  font-size: 13px;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center
}

/*筛选重置/确定  */
.tag-active{
  color: #00D2FF;
  background: rgba(0,210,255,.15);
}